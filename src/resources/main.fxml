<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import edu.cnm.deepdive.ca.View?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="edu.cnm.deepdive.ca.Controller"
  alignment="center"
  hgap="10"
  vgap="10">

  <padding>
    <Insets
      top="10"
      left="10"
      bottom="10"
      right="10"/>

  </padding>

  <VBox
    GridPane.columnIndex="0"
    GridPane.rowIndex="0"
    GridPane.halignment="CENTER"
    GridPane.valignment="TOP"
    minWidth="180"
    alignment="TOP_CENTER"
    spacing="10">



    <Label
      text="%densityInputText"
      labelFor="$densityInput"
      mnemonicParsing="true"/>
    <HBox>

      <TextField
        fx:id="densityInput"/>

      <Button
        fx:id="densityInputButton"
        text="%densityInputButton"/>

    </HBox>

    <Label
      text="%densitySliderText"
      labelFor="$densitySlider"
      mnemonicParsing="true"/>

    <Slider
      fx:id="densitySlider"
      min="0"
      max="100"
      majorTickUnit="10"
      minorTickCount="1"
      snapToTicks="true"
      showTickMarks="true"
      showTickLabels="false"
      blockIncrement="10"
      value="50"/>


    <Button
      fx:id="resetButton"
      text="%resetButtonText"
      onAction="#reset"/>

  </VBox>

  <VBox
    GridPane.columnIndex="0"
    GridPane.rowIndex="1"
    GridPane.halignment="CENTER"
    GridPane.valignment="TOP"
    minWidth="180"
    alignment="TOP_CENTER"
    spacing="25">

    <HBox
      alignment="CENTER"
      spacing="10">

      <Button
        fx:id="runOnceButton"
        text="%runOnceButtonText"
        onAction="#runOnce">
      </Button>



      <ToggleButton
        fx:id="runForeverButton"
        text="%runForeverButtonText"
        onAction="#runForever"/>


      <Text
        fx:id="generation_label"/>


    </HBox>

    <HBox
      spacing="30"
      alignment="CENTER">

      <Label
        text="%genTextLabel"
        labelFor="$genText"
        mnemonicParsing="true"/>

      <Text
        fx:id="genText"
        text="%genTextOutput"
        textAlignment="CENTER"/>

    </HBox>
  </VBox>


  <ScrollPane
    fx:id="viewScroller"
    GridPane.rowIndex="0"
    GridPane.columnIndex="1"
    GridPane.rowSpan="2"
    GridPane.halignment="CENTER"
    GridPane.valignment="TOP"
    minWidth="300"
    minHeight="300"
    maxWidth="800"
    maxHeight="800"
    pannable="true"
    hbarPolicy="NEVER"
    vbarPolicy="NEVER">

    <View
      fx:id="terrainView"
      width="2000"
      height="2000"/>

  </ScrollPane>


</GridPane>











